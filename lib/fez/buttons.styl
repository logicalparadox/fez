

button-shiny(bg = #fff, ft = #262626, hbg = #3570AA, hft = #fff)
  display inline-block
  padding 0.5em 1em
  background linear-gradient(top, darken(bg, 2%), darken(bg, 10%)); 
  border 1px solid darken(bg, 25%)
  font 11px/normal helvetica,arial,freesans,clean,sans-serif
  color ft
  text-decoration none
  text-shadow 1px 1px 0px lighten(bg, 10%)
  font-weight bold
  border-radius 3px
  
  &:hover
    background linear-gradient(top, lighten(hbg, 10%), hbg);
    color hft
    text-shadow -1px -1px 0px darken(hbg, 25%)
    border 1px solid darken(hbg, 15%)