
fez-fonts()
  fez-fonts-heading()
  fez-fonts-paragraph()
  fez-fonts-code()

fez-fonts-heading()
  h1
    font-size 2em
    margin-bottom 0.75em
    line-height 1.5

  h2
    font-size 1.5em
    margin-bottom 0.75em
    line-height 1

  h3
    font-size 1.25em
    margin-bottom 1em
    line-height 1.2

  h4
    font-size 1.125em
    margin-bottom 1.33em
    line-height 1.33

  h5
    font-weight bold

  h5, h6
    font-size 1em
    margin-bottom 1.5em
    line-height 1.5

fez-fonts-paragraph()
  p, address
    margin-bottom 1.5em

  article
    ul
      list-style disc
      margin-bottom 1.5em
  
      li
        margin-left 1.5em

fez-fonts-code()
  code
    font-family "Bitstream Vera Sans Mono", "Courier", monospace